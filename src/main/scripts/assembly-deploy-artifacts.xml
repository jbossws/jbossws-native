            <scope>provided</scope>
            <unpack>false</unpack>
            <includes>
              <include>org.jboss.ws:jbossws-jboss600M5:jar</include>
            </includes>
          </dependencySet>
          <dependencySet>
            <outputDirectory>deploy-artifacts/lib</outputDirectory>
