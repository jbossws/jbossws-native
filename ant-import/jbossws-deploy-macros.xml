            </fileset>
         </copy>
         <copy todir="@{targetdir}/META-INF" flatten="true" overwrite="true">
            <fileset dir="@{thirdpartydir}">
               <include name="**/jbossws-deployer-beans.xml"/>               
            </fileset>
         </copy>
      </sequential>
   </macrodef>

   <!-- ================================================================== -->
