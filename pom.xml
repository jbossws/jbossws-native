    <!--
    Name:  smoketest
    Descr: Executes the smoke tests
    -->
    <profile>
      <id>smoketest</id>
      <modules>
        <module>modules/testsuite</module>
      </modules>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <includes>
                <include>org/jboss/test/ws/jaxws/samples/**/*TestCase.java</include>
              </includes>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>

    <!--
    Name:  testsuite
    Descr: Executes the testsuite
    -->
    <profile>
      <id>testsuite</id>
      <activation>
        <property>
          <name>!no-testsuite</name>
        </property>
      </activation>
      <modules>
        <module>modules/testsuite</module>
      </modules>
    </profile>
  </profiles>

